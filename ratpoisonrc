# Use super-m as meta key, since control-t conflicts with, eg. browsers
escape s-m

# Leave a gap for xmobar
set padding 0 18 0 0
exec xmobar

# Save space
set border 0
set barpadding 0 0

# Use one super-key chord for common actions, instead of two separate chords
definekey top s-p prev
definekey top s-j prev
definekey top s-n next
definekey top s-k next

definekey top s-w prevscreen
definekey top s-Left prevscreen
definekey top s-e nextscreen
definekey top s-Right nextscreen

definekey top s-p exec
definekey top s-semicolon colon

definekey top s-Up focusup
definekey top s-Down focusdown


definekey top s-q only
definekey top s-s split
definekey top s-hash hsplit
definekey top s-S hsplit
