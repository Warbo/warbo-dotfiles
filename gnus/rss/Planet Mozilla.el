if (!NS_SUCCEEDED(rv)) {<br />
// FIXME: Handle error;<br />
}</p>
<p style=\"text-align: justify;\">We may now open the database asynchronously:</p>
<p>// Initialize file argument<br />
nsCOMPtr<nsIFile> dbFile;<br />
