nsCOMPtr<mozIStorageConnection> dbConn;<br />
rv = dbService->AsyncOpenDatabase(dbFile, nullptr, getter_AddRefs(dbConn), onOpened);<br />
if (!NS_SUCCEEDED(rv)) {<br />
